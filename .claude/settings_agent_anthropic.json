{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "permissions": {
      "default": "acceptEdits",
      "allow": [
        "Read",
        "Glob",
        "Grep",
        "Skill",
        "Task",
        "TaskOutput",
        "WebFetch",
        "WebSearch",
        "Bash",
        "Edit",
        "Write",
        "TodoWrite",
        "AskUserQuestion",
        "SlashCommand"
      ],
      "deny": [
        "Read(./.env)",
        "Read(./.env.*)",
        "Read(./secrets/**)"
      ]
    },
    "env": {
        "ANTHROPIC_API_KEY": "sk-ant-your-token-goes-here"
    }
  }